  "host": "localhost:1337",
  "schemes": [
    "https"
  ],
  "paths": {
    "/api/v1/product": {
      "post": {
        "tags": [
          "Products"
        ],
        "summary": "Add a new product to the catalog a list of all products",
        "operationId": "Add New Product",
        "consumes": [
          "application/json",
          "text/json",
          "application/xml",
          "text/xml",
          "application/x-www-form-urlencoded"
        ],
        "produces": [
          "application/json",
          "text/json",
          "application/xml",
          "text/xml"
        ],
        "parameters": [
          {
            "name": "newProduct",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Sello.Api.Contracts.NewProductContract"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object"
            }
          },
          "201": {
            "description": "Information about the added product",
            "schema": {
              "$ref": "#/definitions/Sello.Api.Contracts.NewProductContract"
            }
          },
          "400": {
            "description": "No valid product was specified."
          },
          "500": {
            "description": "The request could not be completed successfully, please try again."
          }
        }
      }
    }
  },
  "definitions": {
    "Sello.Api.Contracts.NewProductContract": {
      "description": "Information concerning a new product that is being added to the catalog",
      "type": "object",
      "properties": {
        "Name": {
          "description": "Name of the product",
          "type": "string"
        },
        "Description": {
          "description": "Description about the product",
          "type": "string"
        },
        "Price": {
          "format": "double",
          "description": "Price for buying the product",
          "type": "number"
        }
      }
    }
  }
}